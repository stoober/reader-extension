{
  "manifest_version": 3,
  "name": "Reader",
  "version": "1.0.0",
  "description": "Save articles for later and highlight important passages",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "commands": {
    "save-page": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Save current page to Read Later"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "newtab/newtab.html"
  },
  "action": {
    "default_title": "Save to Reader",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16-grey.png",
      "48": "icons/icon48-grey.png",
      "128": "icons/icon128-grey.png"
    }
  },
  "icons": {
    "16": "icons/icon16-grey.png",
    "48": "icons/icon48-grey.png",
    "128": "icons/icon128-grey.png"
  }
}
